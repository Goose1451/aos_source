                        <target>1.8</target>
                    </configuration>
                </plugin>
                <!--<plugin>-->
                <!--<groupId>org.apache.maven.plugins</groupId>-->
                <!--<artifactId>maven-resources-plugin</artifactId>-->
                <!--<version>2.7</version>-->
                <!--<configuration>-->
                <!--&lt;!&ndash;<filters>&ndash;&gt;-->
                <!--&lt;!&ndash;<filter>${project.build.directory}/generated-resources/internal_config_for_env.properties</filter>&ndash;&gt;-->
                <!--&lt;!&ndash;</filters>&ndash;&gt;-->
                <!--</configuration>-->
                <!--</plugin>-->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>sql-maven-plugin</artifactId>
                    <version>1.5</version>
                    <dependencies>
                        <!-- specify the dependent jdbc driver here -->
                        <dependency>
                            <groupId>org.postgresql</groupId>
                            <artifactId>postgresql</artifactId>
                            <version>${postgres.driver.version}</version>
                        </dependency>
                    </dependencies>
                    <configuration>
                        <!--suppress MavenModelInspection -->
                        <driver>${hibernate.db.driver_classname}</driver>
                        <autocommit>true</autocommit>
                        <!-- ignore error when database already exists -->
                        <onError>continue</onError>
                    </configuration>
                    <executions>
                        <execution>
                            <id>create-db</id>
                            <phase>process-resources</phase>
                            <goals>
                                <goal>execute</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>unpack-shared-resources</id>
                            <goals>
                                <goal>unpack-dependencies</goal>
                            </goals>
                            <phase>generate-resources</phase>
                            <configuration>
                                <outputDirectory>${project.build.directory}/generated-resources</outputDirectory>
                                <includeArtifactIds>shared_resources</includeArtifactIds>
                                <includeGroupIds>${project.groupId}</includeGroupIds>
                                <excludeTransitive>true</excludeTransitive>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <!-- Provide access to .properties files for use it by maven-->
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>properties-maven-plugin</artifactId>
                    <version>1.0.0</version>
                    <executions>
                        <!-- Associate the read-project-properties goal with the initialize phase, to read the properties file. -->
                        <execution>
                            <id>read-properties-into-maven-process</id>
                            <phase>process-resources</phase>
                            <goals>
                                <goal>read-project-properties</goal>
                            </goals>
                            <configuration>
                                <files>
                                    <!--<file>${project.build.directory}/generated-resources/services.properties</file>-->
                                    <file>${project.build.directory}/generated-resources/global.properties</file>
                                    <file>
                                        ${project.build.directory}/generated-resources/internal_config_for_env.properties
                                    </file>
                                </files>
                            </configuration>
                        </execution>
                        <execution>
                            <id>write-all-maven-variables-into-file</id>
                            <phase>generate-resources</phase>
                            <goals>
                                <goal>write-project-properties</goal>
                            </goals>
                            <configuration>
                                <outputFile>
                                    ${project.basedir}/${project.artifactId}_maven_generated_variables.txt
                                </outputFile>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>buildnumber-maven-plugin</artifactId>
                    <version>1.4</version>
                    <executions>
                        <execution>
                            <phase>validate</phase>
                            <goals>
                                <goal>create</goal>
                                <!--<goal>create-timestamp</goal>-->
                                <!--<goal>create-metadata</goal> &lt;!&ndash;Illegal pattern character 't'&ndash;&gt;-->
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <!--<buildNumberPropertyName>commit.revision</buildNumberPropertyName>-->
                        <timestampFormat>{0,date,yyyy-MM-dd HH:mm:ss}</timestampFormat>
                        <!--<timestampPropertyName>buildTime</timestampPropertyName>-->
                        <doCheck>false</doCheck>
                        <doUpdate>false</doUpdate>
                        <revisionOnScmFailure>revisionOnScmFailure_EVG</revisionOnScmFailure>
                        <scmDirectory>${project.parent.basedir}</scmDirectory>
                        <getRevisionOnlyOnce>true</getRevisionOnlyOnce>
                        <!--<outputName>build.properties</outputName>-->
                        <!--<outputDirectory>${project.build.directory}/generated/build-metadata</outputDirectory>-->
                        <shortRevisionLength>8</shortRevisionLength>
                        <addOutputDirectoryToResources>true</addOutputDirectoryToResources>
                        <!--??????????????? maybe vvv false ????????????????-->
                        <useLastCommittedRevision>true</useLastCommittedRevision>
                        <!--<format>{0,number}.{1,number}.{2,number} commit {3}  ts {4,date,yyyy-MM-dd HH:mm:ss}</format>-->
                        <!--<items>-->
                        <!--<item>buildNumber0</item>-->
                        <!--<item>buildNumber1</item>-->
                        <!--<item>buildNumber2</item>-->
                        <!--<item>scmVersion</item>-->
                        <!--<item>timestamp</item>-->
                        <!--</items>-->
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.7</version>
                    <executions>
                        <execution>
                            <configuration>
                                <encoding>${project.build.sourceEncoding}</encoding>
                                <outputDirectory>${project.basedir}/src/main/webapp</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>${project.build.directory}/generated-resources</directory>
                                        <filtering>true</filtering>
                                        <!--<excludes>-->
                                        <!--<exclude>/*.properties</exclude>-->
                                        <!--</excludes>-->
                                        <includes>
                                            <include>ver.txt</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                            <id>copy-shared-resources-into-webapp</id>
                            <phase>process-resources</phase>
                            <goals>
                                <goal>copy-resources</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
