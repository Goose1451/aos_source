                                <webResources>
                                    <resource>
                                        <directory>${basedir}/target</directory>
                                    </resource>
                                </webResources>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
